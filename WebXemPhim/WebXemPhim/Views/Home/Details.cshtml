@model Libs.Entities.Phim
@{
    ViewData["Title"] = "Chi tiết phim";
}

<h2>Chi tiết phim</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Tên phim:</dt>
        <dd class="col-sm-10">@Model.TenPhim</dd>

        <dt class="col-sm-2">Năm sản xuất:</dt>
        <dd class="col-sm-10">@Model.NamSanXuat</dd>

        <dt class="col-sm-2">Đạo diễn:</dt>
        <dd class="col-sm-10">@Model.DaoDienId</dd>

        <dt class="col-sm-2">Hãng sản xuất:</dt>
        <dd class="col-sm-10">@Model.HangSanXuatId</dd>

        <dt class="col-sm-2">Thể loại:</dt>
        <dd class="col-sm-10">@Model.TheLoaiPhimId</dd>

    </dl>
</div>

<a asp-action="Index">Quay lại danh sách phim</a>
